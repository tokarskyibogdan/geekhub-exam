
.rights
  background-color: #ff4848;
  font-size: 18px;
  font-weight: 300;
  color white
  text-align: center
  padding 1.3%

.footer-logo
  background-color: #17212a;
  padding 2%
  text-align center

.footer-bg
  padding-top 5%
  background no-repeat url('http://dev-tokarskyi-geekhub-exam.pantheonsite.io/wp-content/uploads/2017/04/footer-bg.png')
  -webkit-background-size: cover
  background-size: cover
  position: relative
  .container
    padding-bottom: 0
    position relative
    z-index 5

  &:after
    content ''
    background-color: #000
    opacity 0.6
    position: absolute
    top 0
    right 0
    left 0
    bottom 0


.footer-contact-title
  font-size: 36px;
  font-weight: 300;
  color white

.footer-contact-phone
.footer-contact-address
.footer-contact-description
  font-size: 18px;
  font-weight: 300;
  color white

.footer-contact-address
  padding-right 40%

.footer-contact-phone
.footer-contact-address
  display: flex
  i
    font-size 25px
    margin-right: 15px

.wpcf7-form
  margin-top: 5%

.wpcf7
  input[type='text']
  input[type='email']
  textarea
    resize none
    width: 100%
    outline none
    border none
    border-bottom 1px solid #b5b5b5
    border-top 1px solid #b5b5b5
    padding 18px
    margin-bottom: 4%

  input[type='submit']
    background-color: #ff4848;
    padding 10px 60px
    font-size: 24px;
    font-weight: 700;
    text-transform: uppercase;
    color white
    border none
    outline none

    &:hover
      background-color: #ff8c68;

.sub-footer
  color white
  padding-top 1%
  padding-bottom 20px
  background-color: #ff4848;

.sub-footer-title
  text-align center
  font-size: 36px;
  font-weight: 300;
  color white

.swiper-slide
.slide
  text-align center