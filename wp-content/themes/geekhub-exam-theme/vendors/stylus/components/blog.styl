.blog-pagination
  padding 15px
  display inline-block
  width 100%

  .page-numbers
    background-color: #ff4848
    width: 45px;
    text-align center
    display inline-block
    padding 5px 0
    font-size: 24px;
    font-weight: 700;
    color white

  .current
    color black

  .next
    display none
  .prev
    display: none

.blog-post-wrapper
  border: 1px solid rgba(0, 1, 1, 0.5);
  p
    padding 1% 5% 0 5%

.blog-post-title
  margin-bottom: 0
  font-size: 16px;
  font-weight: 500;
  padding 0 5%

.blog-post-excerpt
  font-size: 9px;
  font-weight: 400;
  line-height: 16px;
  color black

.blog-post
  padding 0 10px
  font-size: 9px;
  font-weight: 400;
  line-height: 16px;

  &:hover
    .blog-post-title
    .feature-image i
      color red

.post-link
  color black
  &:hover
    text-decoration none
    color black

.blog-post-date
  text-align center
  border-top: 1px solid rgba(0, 1, 1, 0.5);
  color: #6d6464;
  font-size: 12px;
  font-weight: 400;
  i
    margin-right 15px
    font-size 30px
    position: relative
    top 6px

.feature-image
  img
    width 100%

  i
    position: absolute
    right 10px
    font-size 50px
    background-color: #fff


.single-blog-post
  font-size: 13px;
  font-weight: 400;
  line-height: 16px;

  h1
  h2
  h3
  h4
  h5
  h6
    color: #d35400;

.single-post-feature-img
  float left
  margin 0 30px 30px 0

.single-post-title
  font-size: 18px;
  font-weight: 700;